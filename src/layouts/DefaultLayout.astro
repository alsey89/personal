---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="inset-0 flex justify-center">
    <div class="w-full max-w-[1280px] flex flex-col gap-4">
      <Card class="h-16 flex justify-center">
        <nav>
          <Button variant="ghost"><a href="/">Home</a></Button>
          <Button variant="ghost"><a href="/about">About</a></Button>
          <Button variant="ghost"><a href="/contact">Contact</a></Button>
        </nav>
      </Card>
      <slot />
    </div>
  </div>
</BaseLayout>
