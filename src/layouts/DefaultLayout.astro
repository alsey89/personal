---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { GoIcon } from "@/components/icon";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div
    class="h-16 flex justify-end md:justify-center items-center border-y-2 border-black px-4"
  >
    <Button variant="ghost" class="hidden md:block">
      <a href="/">Home</a>
    </Button>
    <Button variant="ghost" class="hidden md:block">
      <a href="/about">About</a>
    </Button>
    <Button variant="ghost" class="hidden md:block">
      <a href="/contact">Contact</a>
    </Button>
    <Button variant="default" class="block md:hidden">|||</Button>
  </div>
  <div class="inset-0 flex justify-center">
    <div class="w-full flex flex-col gap-4">
      <slot />
    </div>
  </div>
</BaseLayout>
