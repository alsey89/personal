---
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import {
  Card,
  CardContent,
  CardDescription,
  CardTitle,
  CardHeader,
  CardFooter,
} from "@/components/ui/card";
import {
  GoIcon,
  NodeIcon,
  NuxtIcon,
  VueIcon,
  PostgresIcon,
} from "@/components/icon";
---

<DefaultLayout title="Home">
  <main>
    <!--! Hero -->
    <section
      id="hero"
      class="relative bg-neutral-100 border-b-2 border-black overflow-hidden z-0"
    >
      <div
        class="absolute inset-y-0 right-auto left-0 h-full w-1/2 bg-[#fec494]"
        style="z-index: -1;"
      >
      </div>
      <!-- background overlay -->
      <div
        style="background-image: url(/pattern.png);"
        class="absolute top-0 right-0 left-auto w-full md:w-1/2 h-full bg-[#02d1c3]"
        style="z-index:-1;"
      >
      </div>

      <div class="container px-4 lg:px-8 mx-auto">
        <!-- row -->
        <div class="grid grid-cols-1 lg:grid-cols-2 items-center">
          <!-- hero image -->
          <div class="hidden md:block order-2 lg:pl-12">
            <figure
              class="relative transform duration-1000 scale-75 delay-100"
              data-view="!opacity-100 !scale-100"
            >
              <svg viewBox="0 0 180 180" xmlns="http://www.w3.org/2000/svg">
                <path
                  fill="#FF0066"
                  stroke="black"
                  stroke-width="1"
                  d="M36.3,-63.1C48.1,-56.1,59.4,-48.5,62.3,-37.9C65.3,-27.2,59.7,-13.6,59.1,-0.3C58.5,12.9,62.9,25.9,60.4,37.2C57.9,48.5,48.6,58.3,37.4,61.4C26.2,64.5,13.1,61,1.7,58.1C-9.7,55.2,-19.4,52.9,-33.8,51.6C-48.2,50.3,-67.2,50,-69.1,41.6C-71.1,33.2,-55.9,16.6,-55.1,0.5C-54.3,-15.7,-67.9,-31.4,-67.4,-42.1C-66.8,-52.9,-52,-58.7,-38.4,-64.7C-24.8,-70.6,-12.4,-76.8,-0.1,-76.6C12.3,-76.5,24.5,-70.1,36.3,-63.1Z"
                  transform="translate(100 100)"></path>
                <defs>
                  <clipPath id="ones">
                    <path
                      fill="#FF0066"
                      d="M36.3,-63.1C48.1,-56.1,59.4,-48.5,62.3,-37.9C65.3,-27.2,59.7,-13.6,59.1,-0.3C58.5,12.9,62.9,25.9,60.4,37.2C57.9,48.5,48.6,58.3,37.4,61.4C26.2,64.5,13.1,61,1.7,58.1C-9.7,55.2,-19.4,52.9,-33.8,51.6C-48.2,50.3,-67.2,50,-69.1,41.6C-71.1,33.2,-55.9,16.6,-55.1,0.5C-54.3,-15.7,-67.9,-31.4,-67.4,-42.1C-66.8,-52.9,-52,-58.7,-38.4,-64.7C-24.8,-70.6,-12.4,-76.8,-0.1,-76.6C12.3,-76.5,24.5,-70.1,36.3,-63.1Z"
                      transform="translate(100 100)"></path>
                  </clipPath>
                </defs>
                <image
                  transform="matrix(1 0 0 1 0 0)"
                  clip-path="url(#ones)"
                  xlink:href="/profilepicture.jpg"
                  width="235"
                  height="200"
                />
              </svg>
            </figure>
          </div>

          <!-- hero content -->
          <div class="order-1 xl:pr-12 xl:py-16">
            <div
              class="text-left lg:mr-8 py-16 md:pb-0 lg:py-16 transform duration-1000 translate-y-8 delay-100"
              data-view="!opacity-100 !translate-y-0"
            >
              <h1
                class="text-4xl lg:text-5xl leading-tight font-bold text-black mb-6"
              >
                Hello, World!
              </h1>
              <h1
                class="text-4xl lg:text-5xl leading-tight font-bold text-black mb-6"
              >
                IAM <span class="text-secondary md:text-primary"
                  >Michael Chen</span
                >
              </h1>
              <p
                class="text-gray-800 leading-relaxed font-light text-xl mx-auto mb-8"
              >
                Doctor turned Software Engineer, and lifelong cross-domain
                learner. Passionate about building and solving problems.
              </p>

              <a
                class="py-3 px-4 relative inline-flex flex-row items-center justify-center gap-x-2 rounded font-bold text-lg tracking-[.00714em] border-2 border-black hover:-translate-y-0.5 transform duration-200 shadow-[4px_4px_0_0_#000000] focus:-translate-y-0.5 bg-yellow-300 text-black"
                href="#"
              >
                About Me
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="currentColor"
                  class="bi bi-arrow-right"
                  viewBox="0 0 16 16"
                >
                  <path
                    fill-rule="evenodd"
                    d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"
                  >
                  </path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="h-16 border-b-2 border-black"></div>
    <!--! Skill Tree -->
    <div>Always learning. Currenlty focusing on:</div>
    <Card>
      <CardContent
        class="flex w-full h-16 justify-around items-center px-4 py-2"
      >
        <GoIcon class="w-14 h-14" />
        <NodeIcon class="w-14 h-14" />
        <PostgresIcon class="w-14 h-14" />
        <NuxtIcon class="w-14 h-14" />
        <VueIcon class="w-14 h-14" />
      </CardContent>
    </Card>
  </main>
</DefaultLayout>
