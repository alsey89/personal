---
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import {
  Card,
  CardContent,
  CardTitle,
  CardHeader,
  CardFooter,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
---

<DefaultLayout title="Home">
  <main>
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
      <Card class="col-span-3 p-4">
        <img src="/profilepicture.jpg" alt="Michael Chen" class="" />
      </Card>
      <Card class="col-span-9 flex flex-col justify-between">
        <CardTitle>
          <div class="flex flex-col gap-2">
            <div class="text-[56px] font-bold">Hello, my name is</div>
            <div class="text-[64px] text-primary font-bold py-4">
              Michael Chen
            </div>
          </div>
        </CardTitle>
        <CardContent>
          <div class="text-[32px] text-wrap text-gray-500">
            Doctor turned Software Engineer, based in Taiwan. Passionate about
            building.
          </div>
        </CardContent>
        <CardFooter>
          <div class="flex gap-2 items-center">
            <Button>Software Engineer</Button>
            <Button>Medical Doctor</Button>
            <Button>Entrepreneur</Button>
          </div>
        </CardFooter>
      </Card>
    </div>
  </main>
</DefaultLayout>
